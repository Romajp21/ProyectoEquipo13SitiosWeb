@page
@model Jefatura.Pages.Aprobaciones.FE_TableroJefaturaModel
@{
    ViewData["Title"] = "Tablero del Jefe de Estudio";
    var datosTablero = Model.DatosTablero; // Diccionario con los datos del tablero
}

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-primary fw-bold">📊 Tablero Encargado
                de Estudio</h1>
        </div>
    </div>

    <!-- Sección de métricas -->
    <div class="row g-4">
        <!-- Pago de Membresías -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Pago de Membresías</h5>
                    <p class="display-4 text-primary">
                        ₡@String.Format("{0:N2}", datosTablero.GetValueOrDefault("PagoMembresias", 0.0))
                    </p>
                </div>
            </div>
        </div>

        <!-- Citas Pendientes -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Citas Pendientes</h5>
                    <p class="display-4 text-warning">
                        @datosTablero.GetValueOrDefault("CitasPendientes", 0)
                    </p>
                </div>
            </div>
        </div>

        <!-- Citas Completadas -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Citas Completadas</h5>
                    <p class="display-4 text-success">
                        @datosTablero.GetValueOrDefault("CitasCompletadas", 0)
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-3">
        <!-- Promedio de Calificación -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Promedio de Calificación</h5>
                    <p class="display-4 text-info">
                        @String.Format("{0:0.00}", datosTablero.GetValueOrDefault("PromedioCalificacion", 0.0))
                    </p>
                </div>
            </div>
        </div>

        <!-- Membresías Activas -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Membresías Activas</h5>
                    <p class="display-4 text-primary">
                        @datosTablero.GetValueOrDefault("MembresiasActivas", 0)
                    </p>
                </div>
            </div>
        </div>

        <!-- Membresías Inactivas -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Membresías Inactivas</h5>
                    <p class="display-4 text-danger">
                        @datosTablero.GetValueOrDefault("MembresiasInactivas", 0)
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de alertas o mensajes -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info mt-4" role="alert">
            @TempData["Mensaje"]
        </div>
    }
</div>
