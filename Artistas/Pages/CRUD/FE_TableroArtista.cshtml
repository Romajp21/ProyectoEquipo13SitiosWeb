@page
@model Artistas.Pages.CRUD.FE_TableroArtistaModel
@{
    ViewData["Title"] = "Tablero del Artista";
    var datosTablero = Model.DatosTablero; // Diccionario con los datos del tablero
}

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-primary fw-bold">🎨 Tablero del Artista</h1>
        </div>
    </div>

    <!-- Sección de métricas -->
    <div class="row g-4">
        <!-- Citas Pendientes -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Citas Pendientes</h5>
                    <p class="display-4 text-warning">
                        @datosTablero.GetValueOrDefault("CitasPendientes", 0)
                    </p>
                </div>
            </div>
        </div>

        <!-- Citas Completadas -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Citas Completadas</h5>
                    <p class="display-4 text-success">
                        @datosTablero.GetValueOrDefault("CitasCompletadas", 0)
                    </p>
                </div>
            </div>
        </div>

        <!-- Promedio de Calificación -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Promedio de Calificación</h5>
                    <p class="display-4 text-primary">
                        @String.Format("{0:0.00}", datosTablero.GetValueOrDefault("PromedioCalificacion", 0.0))
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de alertas o mensajes -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info mt-4" role="alert">
            @TempData["Mensaje"]
        </div>
    }
</div>
