@page
@model Webapp.Pages.Cliente.FE_HomeModel
@{
    ViewData["Title"] = "Inicio";
}

<html>
<head>
    <title>Ink Studio</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #000;
            color: #fff;
        }
	.close-btn {
    background: none;
    border: none;
    color: white;
    font-size: 20px;
    float: right;
    cursor: pointer;
}
.hidden {
    display: none;
}


}
        .hero {
            text-align: center;
            padding: 50px 20px;
        }

            .hero img {
                width: 100%;
                max-width: 800px;
                border-radius: 10px;
            }

            .hero h1 {
                font-size: 48px;
                margin: 20px 0;
            }

            .hero p {
                font-size: 18px;
                margin: 20px 0;
            }

        .services {
            padding: 50px 20px;
            text-align: center;
        }

            .services h2 {
                font-size: 36px;
                margin-bottom: 30px;
            }

            .services .service {
                display: inline-block;
                width: 150px;
                margin: 20px;
                text-align: center;
            }

                .services .service img {
                    width: 100%;
                    border-radius: 50%;
                }

                .services .service h3 {
                    font-size: 18px;
                    margin: 10px 0;
                }

        .btn-ver-mas {
            display: block;
            margin: 30px auto 0;
            padding: 10px 20px;
            background-color: #1a1a1a;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            text-transform: uppercase;
            border: 1px solid #444;
            transition: background-color 0.3s ease-in-out;
        }

            .btn-ver-mas:hover {
                background-color: #007bff;
                color: #fff;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
            }

        .testimonios {
            padding: 50px 20px;
            background-color: #000; /* Fondo completamente negro */
            color: #fff;
            border-radius: 10px;
            text-align: center;
        }

            .testimonios h2 {
                font-size: 36px;
                margin-bottom: 30px;
            }

        .testimonios-lista {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .testimonio-item {
            padding: 15px;
            background-color: #1a1a1a; /* Fondo negro para las tarjetas */
            border: 1px solid #444;
            border-radius: 10px;
            text-align: left;
            color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
        }

            .testimonio-item p {
                margin: 5px 0;
            }

        .estrellas {
            margin-top: 10px;
        }

            .estrellas i {
                font-size: 20px;
            }
        /* Estilo para el botón del chatbox */
        .chatbox {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 300px;
            background-color: #1a1a1a;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            color: white;
            font-family: 'Roboto', sans-serif;
            overflow: hidden;
        }

        .chatbox-header {
            padding: 10px;
            background-color: #007bff;
            color: white;
            font-weight: bold;
            text-align: center;
        }

        .chatbox-body {
            padding: 15px;
            max-height: 200px;
            overflow-y: auto;
        }

        .chatbox-response {
            display: block;
            margin: 10px 0;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            text-align: center;
            font-weight: bold;
            cursor: pointer;
        }

            .chatbox-response:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero">
        <img src="@Model.HeroImagen.RutaImagen" alt="@Model.HeroImagen.DescripcionTatuaje" />
        <h1>Bienvenido a Ink Studio</h1>
        <p>Un estudio de tatuajes completo centrado en la creatividad, innovación y comunidad.</p>
    </div>

    <!-- Servicios Section -->
    <div class="services">
        <h2>Servicios</h2>
        @foreach (var servicio in Model.ServiciosImagenes)
        {
            <div class="service">
                <img src="@servicio.Value.RutaImagen" alt="@servicio.Key" />
                <h3>@servicio.Key</h3>
            </div>
        }
    </div>
    <!-- Botón para visitar la galería -->
    <div style="text-align: center; margin-top: 40px;">
        <a href="/Cliente/FE_GaleriaDinamica" style="
        display: inline-block;
        padding: 15px 30px;
        border-radius: 10px;
        background-color: #1a1a1a;
        color: #fff;
        font-size: 18px;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.5);
        transition: all 0.3s ease-in-out;
    ">
            Visitar Galería
        </a>
    </div>
    <!-- Testimonios Section -->
    <div class="testimonios">
        <h2>Lo que Dicen Nuestros Clientes</h2>
        <div class="testimonios-lista">
            @foreach (var testimonio in Model.TestimoniosAprobados)
            {
                <div class="testimonio-item">
                    <p><strong>@testimonio.Cliente</strong></p>
                    <p>"@testimonio.Testimonio"</p>
                    <div class="estrellas">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= testimonio.Calificacion)
                            {
                                <i class="fas fa-star" style="color: #FFD700;"></i>
                            }
                            else
                            {
                                <i class="far fa-star" style="color: #FFD700;"></i>
                            }
                        }
                    </div>
                </div>
            }
        </div>
        <a href="/Cliente/FE_VerTestimonios" class="btn-ver-mas">Ver Más Testimonios</a>

    </div>

    <!-- Botón para abrir/cerrar el chatbox -->
    <div id="chatbox-toggle" class="chatbox-toggle" onclick="toggleChatbox()">Chat Ink Studio</div>

    <!-- Chatbox -->
    <div class="chatbox">
        <div class="chatbox-header">
            <h4>Chat Ink Studio</h4>
            <button onclick="toggleChatbox()" class="close-btn">&times;</button>
        </div>
        <div class="chatbox-body">
            @if (Model.PreguntasIniciales.Count > 0 && Model.PreguntaActual == null)
            {
                <p>Bienvenido al estudio, ¿en qué podemos ayudarte?</p>
                <ul>
                    @foreach (var pregunta in Model.PreguntasIniciales)
                    {
                        <li>
                            <form method="post" asp-page-handler="SeleccionarPregunta">
                                <input type="hidden" name="idPregunta" value="@pregunta.IdPregunta" />
                                <button type="submit" class="chatbox-response">
                                    @pregunta.TextoPregunta
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            }
            else if (Model.PreguntaActual != null)
            {
                <p><strong>@Model.PreguntaActual.TextoPregunta</strong></p>
                <ul>
                    @foreach (var respuesta in Model.RespuestasActuales)
                    {
                        <li>
                            <form method="post" asp-page-handler="SeleccionarPregunta">
                                <input type="hidden" name="idPregunta" value="@respuesta.IdPreguntaDestino" />
                                <button type="submit" class="chatbox-response">
                                    @respuesta.TextoRespuesta
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No hay preguntas activas en este momento.</p>
            }
        </div>
    </div>


    <script>
        function toggleChatbox() {
            const chatbox = document.getElementById("chatbox");
            chatbox.classList.toggle("hidden");
        }
    </script>
</body>
</html>
