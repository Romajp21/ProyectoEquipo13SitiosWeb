@page
@model Webapp.Pages.Cliente.Pages_Cliente_TarjetasR
@{
}

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>
        InkVibe Tarjetas de Regalo 
    </title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #000;
            color: #fff;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px 0;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 0;
        }

            .header a {
                color: #fff;
                text-decoration: none;
                margin: 0 15px;
            }

            .header .logo {
                font-size: 24px;
                font-weight: bold;
            }

            .header .book-now {
                background-color: #fff;
                color: #000;
                padding: 10px 20px;
                border-radius: 5px;
                text-decoration: none;
            }

        .promotions {
            display: flex;
            justify-content: space-between;
        }

            .promotions .details {
                width: 60%;
            }

            .promotions .images {
                width: 35%;
            }

                .promotions .images img {
                    width: 100%;
                    border-radius: 10px;
                    margin-bottom: 20px;
                }

        .promotion-item {
            margin-bottom: 40px;
        }

            .promotion-item h2 {
                font-size: 24px;
                font-weight: bold;
            }

            .promotion-item p {
                font-size: 16px;
                margin: 10px 0;
            }

            .promotion-item .get-deal {
                background-color: #555;
                color: #fff;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

        .promotion-info {
            display: none;
            margin-top: 20px;
            padding: 10px;
            background-color: #333;
            border-radius: 5px;
        }
    </style>
</head>
<body>

        <div class="promotions">
            <div class="details">
                <h1>
                   Taretas de Regalo 
                </h1>
                <p>
                Regala arte con nuestras exclusivas tarjetas regalo

                </p>
                <div class="promotion-item">
                    <p>
                    Disponible ahora
                    </p>
                    <h2>
                    Tarjeta de regalo valorada en ₡200.
                    </h2>
                    <p>
                     Oferta válida por tiempo limitado. Utiliza esta tarjeta regalo para cualquier servicio de tatuaje o piercing.
                    </p>
                    <button class="get-deal" onclick="showInfo('promo1')">
                    Obtener oferta
                    </button>
                    <div class="promotion-info" id="promo1">
                        <p>
                        Oferta válida por tiempo limitado. Utiliza esta tarjeta regalo para cualquier servicio de tatuaje o piercing.
                        </p>
                    </div>
                </div>
            </div>
            <div class="images">
                <img alt="Gift card with tattoo design" height="400" src="https://storage.googleapis.com/a1aa/image/K7YZTRieuFVYXSjAKlzAruhv0qtAMZ3Om8L7K6YXzQka9J5JA.jpg" width="600" />
            </div>
        </div>
    </div>
    <script>
        function showInfo(id) {
            var info = document.getElementById(id);
            if (info.style.display === "none" || info.style.display === "") {
                info.style.display = "block";
            } else {
                info.style.display = "none";
            }
        }
    </script>
</body>
</html>
