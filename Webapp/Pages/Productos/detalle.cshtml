@page "{id:int}"
@model Webapp.Pages.Productos.DetalleModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Producto.ImagenUrl" class="img-fluid" alt="@Model.Producto.NombreProducto">
        </div>
        <div class="col-md-6">
            <h2>@Model.Producto.NombreProducto</h2>
            <p class="lead">$@Model.Producto.Precio</p>
            <p>@Model.Producto.Descripcion</p>
            <p><strong>Category:</strong> @Model.Producto.Categoria</p>
            <a asp-page="/Productos/Productos" class="btn btn-secondary">Back to Shop</a>

        </div>
    </div>
</div>
