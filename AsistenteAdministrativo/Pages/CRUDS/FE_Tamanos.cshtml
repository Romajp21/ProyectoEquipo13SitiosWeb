@page
@model AsistenteAdministrativo.Pages.CRUDS.FE_TamanosModel
@{
    ViewData["Title"] = "Gestión de Tamanos";
}

<h2>Gestión de Tamanos</h2>

<form method="post" asp-page-handler="Registrar">
    <div class="form-group">
        <label>Tamaño</label>
        <input asp-for="NuevoTamano.Tamano" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <input asp-for="NuevoTamano.DescripcionTamano" class="form-control" />
    </div>
    <div class="form-group">
        <label>Estado</label>
        <input asp-for="NuevoTamano.Estado" class="form-check-input" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tamaño</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tamano in Model.Tamanos)
        {
            <tr>
                <td>@tamano.IdTamano</td>
                <td>@tamano.Tamano</td>
                <td>@tamano.DescripcionTamano</td>
                <td>@(tamano.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <form method="post" asp-page-handler="Actualizar">
                        <input type="hidden" name="id" value="@tamano.IdTamano" />
                        <button type="submit" class="btn btn-warning">Editar</button>
                    </form>
                    <form method="post" asp-page-handler="Eliminar">
                        <input type="hidden" name="id" value="@tamano.IdTamano" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info">@TempData["Mensaje"]</div>
}
