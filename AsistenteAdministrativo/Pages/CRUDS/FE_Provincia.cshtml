@page
@model AsistenteAdministrativo.Pages.CRUDS.FE_ProvinciaModel

<h2>Gestión de Provincias</h2>

<form method="post">
    <div>
        <label>Nombre de la Provincia:</label>
        <input asp-for="NuevaProvincia.NombreProvincia" />
    </div>
    <button type="submit" asp-page-handler="Registrar">Registrar</button>
</form>

<table>
    <thead>
        <tr>
            <th>Nombre de Provincia</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Provincias)
        {
            <tr>
                <td>@item.NombreProvincia</td>
                <td>
                    <form method="post" asp-page-handler="Eliminar" asp-route-id="@item.IdProvincia">
                        <button type="submit">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
